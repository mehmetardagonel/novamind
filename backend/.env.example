# =============================
# Gmail API Configuration
# =============================

# Google Cloud OAuth 2.0 Client Credentials
GOOGLE_CLIENT_ID=YOUR_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE
GOOGLE_PROJECT_ID=novamind-email-assistant-api
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_REDIRECT_URI=http://localhost

# =============================
# Local Token Storage
# =============================

# Access & Refresh tokens (generated after OAuth flow)
GMAIL_ACCESS_TOKEN=YOUR_ACCESS_TOKEN_HERE
GMAIL_REFRESH_TOKEN=YOUR_REFRESH_TOKEN_HERE
GMAIL_TOKEN_URI=https://oauth2.googleapis.com/token
GMAIL_REVOKE_URI=https://oauth2.googleapis.com/revoke
GMAIL_SCOPES="https://www.googleapis.com/auth/gmail.modify https://www.googleapis.com/auth/gmail.settings.basic"

# =============================
# App Configuration
# =============================

# Path to credential/token files (if needed by simplegmail)
GMAIL_CREDENTIALS_PATH=client_secret.json
GMAIL_TOKEN_PATH=gmail_token.json

# FastAPI Settings
API_HOST=127.0.0.1
API_PORT=8000

# =============================
# Authentication Configuration
# =============================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-in-production-please-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# =============================
# Database Configuration
# =============================

# Database URL (SQLite for development, PostgreSQL/Supabase for production)
DATABASE_URL=sqlite:///./novamind.db
# For PostgreSQL/Supabase:
# DATABASE_URL=postgresql://user:password@host:port/database
